<h1>Article blog</h1>
<%  @gossip.each do |gossip| %>
<h1><%= gossip.title %></h1>
<p><%= gossip.content %></p>
<p>
<a href="<%= gossip_path(gossip.id) %>" class="btn btn-primary">lire la suite</a>
<a href="<%= edit_gossip_path(gossip.id) %>" class="btn btn-primary">Editer</a>
<a href="<%= gossip_path(gossip.id) %>" class="btn btn-danger" data-confirm="êtes vous sur?" data-method="DELETE" >supprimer</a>
</p>
<% end  %>
<p>
 <a href="<% new_gossip_path  %>" class = "btn btn-primary">Créer un article</a>
</p>