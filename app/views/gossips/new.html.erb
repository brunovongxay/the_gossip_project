<div class="jumbotron jumbotron-fluid jumbotron-hero">
  <br>
  <br>
  <br>
  <div class="text-center">
    <h1>Please enter the title and your gossip</h1>
  <br>
  <br>
  <br>
  <div class="d-flex justify-content-center">
  <%= form_for @gossips do |f| %>
      <div class="form-row align-items-center">
          <div class="col-auto my-1">
            <h4>The Title</h4>
            <label class="sr-only" for="inlineFormInputName">Name</label>
              <%= f.text_field :title, class: "form-control rounded-pill" %>
          </div>
          <div class="col-auto my-1">
            <h4>The Gossip</h4>
            <label class="sr-only" for="inlineFormInputGossip">Gossip</label>
              <%= f.text_field :content, class: "form-control rounded-pill" %>
          </div>
      </div>
      <div class="col-auto my-1">
        <button type="submit" class="btn btn-dark rounded-pill">Submit</button>
      </div>
  </form>
  <% end %>
  </div>
  </div>
</div>
